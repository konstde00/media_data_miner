# Reddit Data Miner Configuration
# No Reddit API credentials required - uses public .json endpoints

# --- Basic Ingestion Settings ---
SUBREDDITS=startups,entrepreneur,smallbusiness,SaaS
INGEST_DAYS=14
MIN_SCORE=5

# --- JSON Scraping Configuration ---
REQUEST_DELAY=1.0
PAGES_PER_SUBREDDIT=5
SAVE_FORMAT=parquet
FETCH_COMMENTS=true
MAX_COMMENTS_PER_POST=500

# --- Optional Proxy Support (for large-scale scraping) ---
ENABLE_PROXY_ROTATION=false
PROXY_POOL=http://user:pass@proxy1:8080,http://user:pass@proxy2:8080
HTTPS_PROXY=
HTTP_PROXY=

# --- Vector Database Settings ---
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=reddit_chunks
EMBEDDING_MODEL=BAAI/bge-m3
RERANKER_MODEL=BAAI/bge-reranker-v2-m3
CHUNK_SIZE_TOKENS=600
CHUNK_OVERLAP_TOKENS=80
TOPK_RETRIEVE=200
TOPN_RERANK=25

# --- LLM Settings (via Ollama) ---
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.1:8b-instruct
MAX_IDEA_TOKENS=800
TEMPERATURE_IDEAS=0.7
TEMPERATURE_SCORING=0.3

# --- Parallel Scraping Settings (optimized for 10GB RAM) ---
PARALLEL_WORKERS=10
MEMORY_PER_WORKER_MB=200
PARALLEL_BATCH_SIZE=50
ENABLE_PARALLEL_DISCOVERY=true
MAX_PARALLEL_RUNTIME_MINUTES=120
JOB_QUEUE_CLEANUP_DAYS=3